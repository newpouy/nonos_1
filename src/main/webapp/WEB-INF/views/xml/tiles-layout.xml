<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
<!-- default : 템플릿에 설정된 페이지의 구성 요소에 대한 실제 파일을 지정합니다.  -->
	 <definition name="default" template="/WEB-INF/views/layouts/layout.jsp">
		 <put-attribute name="header" value="/WEB-INF/views/layouts/default/header.jsp" />
		 <put-attribute name="nav" value="/WEB-INF/views/layouts/default/nav.jsp"/>
		 <put-attribute name="sidebar"  value="/WEB-INF/views/layouts/default/sidebar.jsp" />
		 <put-attribute name="content"  value=""/>
		 <put-attribute name="footer" value="/WEB-INF/views/layouts/default/footer.jsp" />
	</definition> 
 
<!--  default를 확장하여 아래 설정에 의해서 페이지를 만들게 됩니다. -->

	<definition name="login" extends="default">
		<put-attribute name="content" value="/WEB-INF/views/login.jsp"/>
	</definition>
	<definition name="orderList" extends="default">
		<put-attribute name="content" value="/WEB-INF/views/order/orderList.jsp"/>
	</definition>
	<definition name="orderOne" extends="default">
		<put-attribute name="content" value="/WEB-INF/views/order/orderOne.jsp"/>
	</definition>
	<definition name="orderWriteView" extends="default">
		<put-attribute name="content" value="/WEB-INF/views/order/orderWriteView.jsp"/>
	</definition>
	<definition name="orderModifyView" extends="default">
		<put-attribute name="content" value="/WEB-INF/views/order/orderModifyView.jsp"/>
	</definition>
</tiles-definitions>