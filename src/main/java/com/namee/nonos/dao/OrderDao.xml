<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.namee.nonos.dao.OrderDao">    
	<resultMap type="com.namee.nonos.domain.Order" id="orderResultMap">
		<result property="orderId" column="orderId"/>
		<result property="companyName" column="companyName"/>
		<result property="orderPerson" column="orderPerson"/>
		<result property="factory" column="factory"/>
		<result property="purchasePrice" column="purchasePrice"/>
		<result property="supplyPrice" column="supplyPrice"/>
		<result property="item" column="item"/>
		<result property="amount" column="amount"/>
		<result property="memo" column="memo"/>
		<result property="deleteYN" column="deleteYN"/>
		<result property="user" column="user"/>
	</resultMap>	
	
	<select id="selectOrderList" resultMap="orderResultMap">
		<![CDATA[
			SELECT
				*
			FROM
				`ORDER`
			WHERE
				deleteYN = 'N'
		]]>
	</select>
	
	<select id="selectOrder" parameterType="int" resultMap="orderResultMap">
		<![CDATA[
			SELECT
				*
			FROM
				`ORDER`
			WHERE 
				orderId = #{orderId}
		]]>	
	</select>
		
	<insert id="insertOrder" parameterType="com.namee.nonos.domain.Order">
		<![CDATA[
			INSERT INTO `ORDER`(companyName,orderPerson,factory,purchasePrice,supplyPrice,item,amount,memo,deleteYN,user)
			VALUES(#{companyName},#{orderPerson},#{factory},#{purchasePrice},#{supplyPrice},#{item},#{amount},#{memo},'N',#{user})
		]]>
	</insert>
	
	<update id="updateOrder" parameterType="com.namee.nonos.domain.Order">
	<![CDATA[
		UPDATE `ORDER`
		SET
			companyName = #{companyName},
			orderPerson = #{orderPerson},
			factory = #{factory},
			purchasePrice = #{purchasePrice},
			supplyPrice = #{supplyPrice},
			item = #{item},
			amount = #{amount},
			memo = #{memo},
			user = #{user}
		WHERE
			orderId = #{orderId}
	]]>		
	</update>
	
	<update id="deleteOrder" parameterType="int">
	<![CDATA[
		UPDATE `ORDER`
		SET
			deleteYN = 'Y'
		WHERE
			orderId = #{orderId}
	]]>		
	</update>
</mapper>